{
  "name": "@spryker-dev/prompts-mcp",
  "version": "1.0.0",
  "description": "Model Context Protocol server for Spryker prompt library - Node.js implementation",
  "main": "mcp/dist/index.js",
  "bin": {
    "spryker-prompts-mcp": "mcp/dist/cli.js"
  },
  "scripts": {
    "build": "mcp/node_modules/.bin/tsc",
    "dev": "mcp/node_modules/.bin/tsx src/cli.ts",
    "start": "node mcp/dist/cli.js",
    "test": "mcp/node_modules/.bin/jest",
    "lint": "mcp/node_modules/.bin/eslint src/**/*.ts",
    "format": "mcp/node_modules/.bin/prettier --write src/*.ts src/**/*.ts",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "spryker",
    "prompts",
    "ai",
    "development"
  ],
  "author": "Spryker Systems GmbH",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/spryker-dev/prompt-library.git",
    "directory": "mcp"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "glob": "^10.0.0",
    "gray-matter": "^4.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "@types/glob": "^8.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**/*",
    "mcp/README.md"
  ]
}
