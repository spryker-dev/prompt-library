#!/bin/bash

# Spryker Prompts MCP Server Setup Script
# This script installs uv and provides ready-to-use MCP configuration

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color
PURPLE='\033[0;35m'

# Function to print colored output
print_step() {
    echo -e "${BLUE}[STEP]${NC} $1"
}

print_success() {
    echo -e "${GREEN}[SUCCESS]${NC} $1"
}

print_warning() {
    echo -e "${YELLOW}[WARNING]${NC} $1"
}

print_error() {
    echo -e "${RED}[ERROR]${NC} $1"
}

print_info() {
    echo -e "${BLUE}[INFO]${NC} $1"
}

print_purple() {
    echo "${PURPLE}$1${NC}"
}

# Function to detect OS
detect_os() {
    if [[ "$OSTYPE" == "linux-gnu"* ]]; then
        echo "linux"
    elif [[ "$OSTYPE" == "darwin"* ]]; then
        echo "macos"
    elif [[ "$OSTYPE" == "linux-musl"* ]]; then
        echo "linux"
    elif [[ "$OSTYPE" == "msys" ]] || [[ "$OSTYPE" == "cygwin" ]]; then
        echo "windows"
    else
        echo "unknown"
    fi
}

# Function to check if command exists
command_exists() {
    command -v "$1" >/dev/null 2>&1
}

# Function to install uv
install_uv() {
    local os=$(detect_os)

    print_step "Installing uv..."

    if command_exists uv; then
        print_success "uv is already installed at $(which uv)"
        return 0
    fi

    case $os in
        "linux"|"macos")
            print_info "Downloading and installing uv using the official installer..."
            curl -LsSf https://astral.sh/uv/install.sh | sh

           # Add both typical install paths for uv
           for bin_path in "$HOME/.local/bin" "$HOME/.cargo/bin"; do
               if [ -d "$bin_path" ] && [[ ":$PATH:" != *":$bin_path:"* ]]; then
                   export PATH="$bin_path:$PATH"
               fi
           done

           # Some uv installs also create an env file to source
           if [ -f "$HOME/.local/bin/env" ]; then
               # shellcheck disable=SC1090
               source "$HOME/.local/bin/env"
           fi
            ;;
        "windows")
            print_info "For Windows, please install uv manually using:"
            echo "  powershell -c \"irm https://astral.sh/uv/install.ps1 | iex\""
            echo "Then run this script again."
            exit 1
            ;;
        *)
            print_error "Unsupported operating system: $os"
            print_info "Please install uv manually from: https://docs.astral.sh/uv/#installation"
            exit 1
            ;;
    esac

    # Verify installation
    if command_exists uv; then
        print_success "uv installed successfully at $(which uv)"
    else
        print_error "uv installation failed or not found in PATH"
        print_info "Install manually from: https://docs.astral.sh/uv/#installation"
        exit 1
    fi
}

# Function to get uvx path
get_uvx_path() {
    local uvx_path

    # First try to find uvx directly
    if command_exists uvx; then
        uvx_path=$(which uvx)
    elif command_exists uv; then
        # If uvx is not found but uv is, uvx should be in the same directory
        local uv_path=$(which uv)
        local uv_dir=$(dirname "$uv_path")
        uvx_path="$uv_dir/uvx"

        if [ ! -f "$uvx_path" ]; then
            # Fallback: uvx might be a subcommand of uv
            print_warning "uvx not found as separate binary, will use 'uv run' instead"
            uvx_path=$(which uv)
        fi
    else
        print_error "Neither uvx nor uv found in PATH"
        exit 1
    fi

    echo "$uvx_path"
}

# Function to generate MCP configuration
generate_mcp_config() {
    local uvx_path=$1
    local use_uv_run=false

    # Check if we need to use 'uv run' instead of uvx
    if [[ "$uvx_path" == *"/uv" ]] && ! command_exists uvx; then
        use_uv_run=true
    fi

    print_step "Checking MCP setup method..."

    # Ask if user is using Claude Code
    echo
    read -p "Are you using Claude Code? (y/n): " -n 1 -r
    echo

    if [[ $REPLY =~ ^[Yy]$ ]]; then
        print_step "Setting up MCP server for Claude Code..."

        # Build the claude mcp add command
        local claude_cmd="claude mcp add spryker-prompts --scope user -- $uvx_path"

        if [ "$use_uv_run" = true ]; then
            claude_cmd="$claude_cmd run --from git+https://github.com/spryker-dev/prompt-library prompt-mcp"
        else
            claude_cmd="$claude_cmd --from git+https://github.com/spryker-dev/prompt-library prompt-mcp"
        fi

        print_info "Running: $claude_cmd"

        # Execute the command
        if eval "$claude_cmd"; then
            print_success "MCP server has been added to Claude Code user scope!"
            echo
            print_info "The Spryker Prompts MCP server is now available in Claude Code."
            print_info "You can start using the prompts immediately."
        else
            print_error "Failed to add MCP server to Claude Code."
            print_info "Please make sure Claude Code CLI is installed and try again."
            echo
            print_info "Falling back to manual configuration..."
            echo
            generate_manual_config "$uvx_path" "$use_uv_run"
        fi
    else
        generate_manual_config "$uvx_path" "$use_uv_run"
    fi
}

# Function to generate manual MCP configuration
generate_manual_config() {
    local uvx_path=$1
    local use_uv_run=$2

    print_step "Generating manual MCP server configuration..."

    echo
    echo "=================================================="
    echo "  SPRYKER PROMPTS MCP SERVER CONFIGURATION"
    echo "=================================================="
    echo
    echo "Copy the following configuration to your mcpServers:"
    echo "${BLUE}"
    print_purple "{"
    print_purple "    \"mcpServers\": {"
    print_purple "        \"spryker-prompts\": {"
    print_purple "              \"command\": \"$uvx_path\","

    if [ "$use_uv_run" = true ]; then
        print_purple "              \"args\": ["
        print_purple "                \"run\","
        print_purple "                \"--from\","
        print_purple "                \"git+https://github.com/spryker-dev/prompt-library\","
        print_purple "                \"prompt-mcp\""
        print_purple "              ]"
    else
        print_purple "              \"args\": ["
        print_purple "                \"--from\","
        print_purple "                \"git+https://github.com/spryker-dev/prompt-library\","
        print_purple "                \"prompt-mcp\""
        print_purple "              ]"
    fi

    print_purple "        }"
    print_purple "    }"
    print_purple "}"
    echo "${NC}"
    echo "=================================================="
    echo
}

# Main execution
main() {
    echo
    echo "üöÄ Spryker Prompts MCP Server Setup"
    echo "======================================"
    echo

    # Install uv
    install_uv

    # Get uvx path
    local uvx_path
    uvx_path=$(get_uvx_path)
    print_success "Found uvx/uv at: $uvx_path"

    # Generate configuration
    generate_mcp_config "$uvx_path"

    # Additional information
    echo "üìù Additional Information:"
    echo "   ‚Ä¢ MCP server usage may consume additional credits"
    echo "   ‚Ä¢ Consider disabling the server when not actively using prompts"
    echo "   ‚Ä¢ Server repository: https://github.com/spryker-dev/prompt-library"
    echo
    print_warning "Some IDEs may use different configuration keys (e.g., 'mcp-server' instead of 'mcpServers')"
    print_success "Setup completed successfully!"
    echo
}

# Run main function
main "$@"
