{
    "name": "spryker-changelog-helper-mcp",
    "version": "1.0.0",
    "description": "Comprehensive change analysis and automated changelog generation for Spryker projects",
    "main": "dist/cli.js",
    "type": "commonjs",
    "bin": {
        "spryker-changelog": "./dist/cli.js",
        "spryker-changelog-mcp": "./dist/mcp-server.js",
        "mcp-server": "./dist/mcp-server.js"
    },
    "scripts": {
        "build": "tsc",
        "start": "node dist/mcp-server.js",
        "dev": "ts-node src/cli.ts",
        "dev:mcp": "ts-node src/mcp-server.ts",
        "watch": "tsc --watch"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^0.5.0",
        "fast-xml-parser": "^5.3.0",
        "globby": "^15.0.0",
        "graphology": "^0.26.0",
        "minimist": "^1.2.8",
        "php-parser": "^3.2.5"
    },
    "devDependencies": {
        "@types/minimist": "^1.2.5",
        "@types/node": "^20.0.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    },
    "keywords": [
        "spryker",
        "changelog",
        "analysis",
        "impact-analysis",
        "mcp",
        "php",
        "typescript",
        "twig",
        "frontend",
        "semantic-versioning"
    ],
    "author": "Spryker Development Team",
    "license": "MIT",
    "engines": {
        "node": ">=18.0.0"
    }
}
